---
import Layout from '../layouts/Layout.astro';
---
<Layout>
  <main>
    <h1 id="greeting" class="title">Hello</h1>
    <p class="subtitle">
      There is nothing here, but you can check out <a href="https://mathias.gg" target="_blank" rel="noopener noreferrer">my website</a> for more!
    </p>
  </main>
</Layout>
<script>
  const greetings = [
    'Hello', 'Hola', 'Bonjour', 'Hallo', 'Ciao', 'Olá', 'Hallo',
    'Привет', 'こんにちは', '你好', 'مرحبا', 'नमस्ते'
  ];
  let currentIndex = 0;
  const greetingElement = document.getElementById('greeting');

  setInterval(() => {
    currentIndex = (currentIndex + 1) % greetings.length;
    greetingElement.classList.add('fade-out');
    
    setTimeout(() => {
      greetingElement.textContent = greetings[currentIndex];
      greetingElement.classList.remove('fade-out');
    }, 500);
  }, 7000);
</script>
<style>
  .title {
    font-size: 6rem;
    font-weight: 400;
    color: var(--primary);
    text-align: center;
    margin-bottom: 1rem;
    transition: opacity 0.5s ease-in-out;
  }
  .title.fade-out {
    opacity: 0;
  }
  .subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 1.2rem;
    font-weight: 400;
    color: var(--text);
    text-align: center;
    opacity: 0.7;
  }
  .subtitle a {
    color: var(--primary);
    text-decoration: none;
    border-bottom: 1px solid var(--primary);
    transition: opacity 0.3s ease;
  }
  .subtitle a:hover {
    opacity: 0.8;
  }
</style>